h3 My Sites
a(ng-click="showCreate()").btn.btn-success
  i.fa.fa-plus-circle
  span Create Site
  
ul.list-group
  li(ng-repeat="site in sites").list-group-item
    strong {{site.name}}
    a(ng-click="edit(site._id)") Edit

div.row
  form.form-horizontal(ng-show="createVisible")
    div.col-lg-6
      div.form-group
        label(for="siteName").control-label.col-sm-4 My Website Name
        div.col-sm-8
          input(type="text",ng-model="newSite.siteName")#siteName.form-control
      
      




      h5 Some Quick Menu Items
      a(ng-click="addMenuItem()").btn.btn-success
        span add Menu Item
        i.fa.fa-plus-circle
      div(ng-repeat="menuItem in newSite.menuItems")

        div.form-group
          label(for="menuItem{{$index}}").control-label.col-sm-1 {{$index}}
          div.col-xs-6
            input(type="text", ng-model="menuItem.title",id="menuItem{{$index}}").form-control
            
          div.col-xs-5
            a(ng-click="addSubMenuItem($index)").btn.btn-info
              span add subMenu&nbsp
              i.fa.fa-plus-square
            a(ng-click="deleteMenuItem($index)").btn.btn-danger
              span delete&nbsp
              i.fa.fa-trash


        div(ng-repeat="subMenuItem in menuItem.sub")
          i.fa-fa-caret-right
          div.form-group
            label(for="").control-label.col-sm-1.col-sm-offset-1 {{$parent.$index}}.{{$index}}
            div.col-xs-6
              input(type="text",ng-model="subMenuItem.title").form-control
            div.col-xs-4
              a(ng-click="deleteSubMenuItem($parent.$index,$index)").btn.btn-danger
                span delete&nbsp
                i.fa.fa-trash
      
      palette-picker(choice="colorChoice")










div.row(ng-show="createVisible")
  h1 Preview 
    i.fa.fa-arrow-circle-down
  div.preview
    div.navbar.navbar-default.navbar-static-top
      div.container
        div.navbar-header
          button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand() {{newSite.siteName}}

        div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
          ul.nav.navbar-nav
            li.dropdown(
              open=""
              ng-repeat='item in newSite.menuItems'
              )
              a.dropdown-toggle(
                is-open="true",
                aria-expanded="false"
                ng-disabled="item.sub.length===0"
              ) {{item.title}}
                span &nbsp
                  i(ng-show="item.sub.length>0").fa.fa-caret-down

              ul.dropdown-menu(role="menu")
                li(ng-repeat="sub in item.sub")
                  a {{sub.title}}

          ul.nav.navbar-nav.navbar-right

