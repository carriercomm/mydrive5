.modal-content
  .modal-header
    button.close(type='button', data-dismiss='modal')
      span(aria-hidden='true') Ã—
      span.sr-only Close
    h4#uploadMediaLabel.modal-title Upload Media
  .modal-body(ng-controller="UploadCtrl")
    div.form-group
      label(for="photos") Input Picture
      input(id="photos" type="file" class="btn" ng-file-select="onFileSelect($files)" multiple)
    div
      table.table
        thead
          tr
            th File
            th Size
            th Progress
            //- th Action
        tbody
          tr(ng-repeat="file in files")
            td
              strong {{file.name}}
            td(nowrap)
              | {{file.size/1024/1024|number:2}} MB
            td
              div.progress
                div.progress-bar(role="progressbar" style="width:{{file.progress}}%;")
                  | {{file.name}} : {{file.progress}}
